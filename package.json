{
  "name": "node-service-template",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "rimraf ./build && babel . --out-dir ./build --presets es2015 --ignore ./node_modules,./build",
    "build:watch": "npm run build -- --watch",
    "start": "cross-env PORT=80 node ./build/bin/www",
    "start:dev": "cross-env NODE_ENV=dev nodemon ./build/bin/www.js --watch ./build/",
    "test": "mocha --recursive ./build/test"
  },
  "dependencies": {
    "body-parser": "^1.15.0",
    "cross-env": "^1.0.7",
    "debug": "^2.2.0",
    "express": "^4.13.4",
    "lodash": "^4.4.0",
    "mongoose": "^4.4.4",
    "morgan": "^1.6.1"
  },
  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-preset-es2015": "^6.5.0",
    "babel-register": "^6.5.2",
    "chai": "^3.5.0",
    "eslint": "^2.1.0",
    "eslint-config-airbnb": "^6.0.2",
    "eslint-plugin-react": "^4.0.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.0",
    "request": "^2.69.0",
    "rimraf": "^2.5.2"
  }
}
